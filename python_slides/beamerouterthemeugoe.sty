        \ifnum\hasshorttitle=1
         \hspace*{2ex}\usebeamerfont{author in head/foot}\insertshortauthor
        \fi\fi
      \end{beamercolorbox}%
      \ifnum\insertframenumber>1
      \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.25ex,dp=1ex,center]{author in head/foot}%
        \ifnum\hasshorttitle=1
          \usebeamerfont{author in head/foot}\insertshorttitle
        \else
          \usebeamerfont{author in head/foot}\insertshortauthor
        \fi
      \end{beamercolorbox}%
      \begin{beamercolorbox}[wd=.25\paperwidth,ht=2.25ex,dp=1ex,right]{page in head/foot}%
        \ifnum\inappendix=0
        \usebeamerfont{page in head/foot} \insertframenumber{}\,/\,\mainendframenumber\hspace*{2ex}
        \else\fi
        \ifnum\inappendix=1
        \usebeamerfont{page in head/foot} \insertframenumber{}\,/\,\appendixendframenumber\,B\hspace*{2ex}
        \else\fi
      \end{beamercolorbox}%
    \fi%
  }%
  \vskip1ex%
}
