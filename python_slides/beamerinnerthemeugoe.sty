\defbeamertemplate*{title page}{ugoe}[1][]
{
  \begin{tikzpicture}[remember picture, overlay]
    \draw (current page.north east) ++(-0.18, 0.01) coordinate(logo ne);
    \node at (logo ne) [anchor=north east] {
      \includegraphics[width=5cm]{logos/logo-uni-goe.pdf}
    };
    \draw (current page.south) ++(0,0.4) node [anchor=south] { \insertlogos };
  \end{tikzpicture}

  \vskip0.6cm%
  \begin{beamercolorbox}[sep=8pt,center,#1]{title page header}
    \usebeamerfont{title}\inserttitle\par%
  \end{beamercolorbox}%
  \vskip0.15cm%
  \begin{beamercolorbox}[center,#1]{author}
    \usebeamerfont{author}\normalfont\insertauthor%
  \end{beamercolorbox}
  \ifnum\hasdpgconsult=1
    \vskip0.15cm%
    \begin{beamercolorbox}[center,#1]{author}
      \usebeamerfont{author}{in consultation with \insertdpgconsult}
    \end{beamercolorbox}
  \else
  \fi
  \vskip0.15cm
  \begin{beamercolorbox}[center,#1]{institute}
    \usebeamerfont{author}\insertinstitute%
  \end{beamercolorbox}
  \ifnum\hassupervisor=1
    \vskip0.15cm%
    \begin{beamercolorbox}[center,#1]{supervisor}
      \usebeamerfont{author}{supervised by: \insertsupervisor}%
    \end{beamercolorbox}
  \else
  \fi
  \ifnum\hasqtsupervisors=1
    \vskip0.15cm%
    \begin{beamercolorbox}[center,#1]{qtsupervisor}
      \usebeamerfont{author}{\footnotesize QT Institute Supervisor: \insertqtinst \\ QT Technical Supervisor: \insertqttech}%
    \end{beamercolorbox}
  \else
  \fi
  \vskip0.4cm%
  \begin{beamercolorbox}[center,#1]{date}
    \usebeamerfont{author}\insertdate%
  \end{beamercolorbox}
  \ifnum\hasconference=1
    \vskip0.05cm%
    \begin{beamercolorbox}[center,#1]{conference}
      \usebeamerfont{author}\insertconference%
    \end{beamercolorbox}
  \else
  \fi
  \vfill
}

